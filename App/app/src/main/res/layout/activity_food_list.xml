<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003E52"
    android:fitsSystemWindows="true"
    tools:context=".FoodListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fcu.app.kebukepsyduck.component_FoodItem
                android:id="@+id/FoodItem_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imgSrc="@drawable/breakfast_eggcake"
                app:textName="高級蛋餅"
                app:textPrice="12$" />
            <fcu.app.kebukepsyduck.component_FoodItem
                android:id="@+id/FoodItem_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imgSrc="@drawable/breakfast_eggcake"
                app:textName="漢堡"
                app:textPrice="12$" />
            <fcu.app.kebukepsyduck.component_FoodItem
                android:id="@+id/FoodItem_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imgSrc="@drawable/breakfast_eggcake"
                app:textName="吐司"
                app:textPrice="12$" />
            <fcu.app.kebukepsyduck.component_FoodItem
                android:id="@+id/FoodItem_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:imgSrc="@drawable/breakfast_eggcake"
                app:textName="奶茶"
                app:textPrice="12$" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>