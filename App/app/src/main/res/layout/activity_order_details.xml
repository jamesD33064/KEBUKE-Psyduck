<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003E52"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/btn_orderDetails_cost"
                android:layout_width="327dp"
                android:layout_height="123dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#CBD7DB"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:textColor="#5C8D9D"
                android:textSize="60sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_orderDetails_state" />

            <Button
                android:id="@+id/btn_orderDetails_foodItens"
                android:layout_width="332dp"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#CBD7DB"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:textColor="#5C8D9D"
                android:textSize="60sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_orderDetails_cost" />

            <Button
                android:id="@+id/btn_orderDetails_state"
                android:layout_width="327dp"
                android:layout_height="123dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#CBD7DB"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:textColor="#5C8D9D"
                android:textSize="60sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:fontFamily="sans-serif-black"
                android:text="消費金額"
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderDetails_cost"
                app:layout_constraintStart_toStartOf="@+id/btn_orderDetails_cost"
                app:layout_constraintTop_toTopOf="@+id/btn_orderDetails_cost" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="消費品項"
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderDetails_foodItens"
                app:layout_constraintStart_toStartOf="@+id/btn_orderDetails_foodItens"
                app:layout_constraintTop_toTopOf="@+id/btn_orderDetails_foodItens" />

            <TextView
                android:id="@+id/tv_orderDetails_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="進行中"
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView24"
                app:layout_constraintStart_toEndOf="@+id/textView24"
                app:layout_constraintTop_toTopOf="@+id/textView24" />

            <TextView
                android:id="@+id/tv_orderDetails_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="2023/4/24 9:00 AM"
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="訂單時間 : "
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/imageView5" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="訂單狀態 : "
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/tv_orderDetails_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:text="600"
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderDetails_cost"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="@+id/btn_orderDetails_cost"
                app:layout_constraintTop_toTopOf="@+id/btn_orderDetails_cost" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_orderDetails_state"
                app:layout_constraintStart_toStartOf="@+id/btn_orderDetails_state"
                app:layout_constraintTop_toTopOf="@+id/btn_orderDetails_state"
                app:srcCompat="@drawable/light_psyduck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.3"
                android:text="訂單明細"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <ScrollView
                android:layout_width="302dp"
                android:layout_height="161dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_orderDetails_foodItens"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderDetails_foodItens"
                app:layout_constraintStart_toStartOf="@+id/btn_orderDetails_foodItens"
                app:layout_constraintTop_toBottomOf="@+id/textView12">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_orderDetail_foodItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="8sp"
                        android:text="奢華培根蛋餅 X 1 : 120\n奢華培根蛋餅 X 1 : 120\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180\nDavid Espresso X 1 : 180"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>