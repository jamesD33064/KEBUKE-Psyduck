<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003E52"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/btn_orderManage_doing"
                android:layout_width="157dp"
                android:layout_height="164dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FFEBCE"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.3"
                android:textColor="#FFFFFF"
                android:textSize="60sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/btn_orderDetails_cost"
                android:layout_width="328dp"
                android:layout_height="110dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#CBD7DB"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:textColor="#5C8D9D"
                android:textSize="60sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_orderManage_doing" />

            <Button
                android:id="@+id/btn_orderManage_finish"
                android:layout_width="157dp"
                android:layout_height="164dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="42dp"
                android:backgroundTint="#FFEBCE"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:textColor="#FFFFFF"
                android:textSize="60sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="進行中訂單"
                android:textAlignment="center"
                android:textColor="#BC955C"
                android:textFontWeight="800"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderManage_doing"
                app:layout_constraintStart_toStartOf="@+id/btn_orderManage_doing"
                app:layout_constraintTop_toBottomOf="@+id/tv_orderManage_doing" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="已完成訂單"
                android:textAlignment="center"
                android:textColor="#BC955C"
                android:textFontWeight="800"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderManage_finish"
                app:layout_constraintStart_toStartOf="@+id/btn_orderManage_finish"
                app:layout_constraintTop_toBottomOf="@+id/tv_orderManage_finish" />

            <TextView
                android:id="@+id/tv_orderManage_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textFontWeight="800"
                android:textSize="70sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderManage_finish"
                app:layout_constraintStart_toStartOf="@+id/btn_orderManage_finish"
                app:layout_constraintTop_toTopOf="@+id/btn_orderManage_finish" />

            <TextView
                android:id="@+id/tv_orderManage_doing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textFontWeight="800"
                android:textSize="70sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderManage_doing"
                app:layout_constraintStart_toStartOf="@+id/btn_orderManage_doing"
                app:layout_constraintTop_toTopOf="@+id/btn_orderManage_doing" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="累積消費金額"
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderDetails_cost"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/btn_orderDetails_cost"
                app:layout_constraintTop_toBottomOf="@+id/tv_orderManage_totalCost" />

            <TextView
                android:id="@+id/tv_orderManage_totalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.1"
                android:text="600"
                android:textAlignment="center"
                android:textColor="#5C8D9D"
                android:textFontWeight="800"
                android:textSize="60sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_orderDetails_cost"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/btn_orderDetails_cost"
                app:layout_constraintTop_toTopOf="@+id/btn_orderDetails_cost" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.3"
                android:text="訂單管理"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <LinearLayout
                android:id="@+id/linear_layout_orderList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_orderDetails_cost"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>