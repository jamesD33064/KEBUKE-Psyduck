<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003E52"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btn_personalPage_start_order"
        android:layout_width="157dp"
        android:layout_height="164dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFEBCE"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.3"
        android:text="開始訂餐"
        android:textColor="#BC955C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_personalPage_shopping_cart"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btn_personalPage_order_manage"
        android:layout_width="335dp"
        android:layout_height="96dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFEBCE"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.3"
        android:text="訂單管理"
        android:textColor="#BC955C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_personalPage_start_order" />

    <Button
        android:id="@+id/btn_personalPage_revise_phone"
        android:layout_width="335dp"
        android:layout_height="96dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFEBCE"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.3"
        android:text="修改電話"
        android:textColor="#BC955C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_personalPage_order_manage" />

    <Button
        android:id="@+id/btn_personalPage_revise_password"
        android:layout_width="335dp"
        android:layout_height="96dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFEBCE"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.3"
        android:text="修改密碼"
        android:textColor="#BC955C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_personalPage_revise_phone" />

    <Button
        android:id="@+id/btn_personalPage_shopping_cart"
        android:layout_width="157dp"
        android:layout_height="164dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FFEBCE"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.3"
        android:text="購物車"
        android:textColor="#BC955C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>